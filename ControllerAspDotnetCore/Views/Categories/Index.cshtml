@using ControllerAspDotnetCore.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Category>;
@section title{
    <h1>Categories</h1>
}

@if (Model != null && Model.Count>0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                        @*href="@($"/categories/edit/{item.Id}")">Edit</a>*@
                        </td>
                </tr>                
            }
            
        </tbody>

    </table>

}


